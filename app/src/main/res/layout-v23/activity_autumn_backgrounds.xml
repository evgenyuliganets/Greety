<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".SpringBackgrounds">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/choose_background"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#205302"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton22"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:background="@drawable/autumn1"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/imageButton23"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:background="@drawable/autumn2"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/imageButton24"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:background="@drawable/autumn3"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/imageButton25"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:background="@drawable/autumn4"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/imageButton26"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:background="@drawable/autumn5"
            android:contentDescription="@string/todo" />

    </LinearLayout>

</ScrollView>
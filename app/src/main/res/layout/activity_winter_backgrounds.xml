<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".WinterBackgrounds"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/choose_background"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#205302"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:background="@drawable/winter1"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:background="@drawable/winter2"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:background="@drawable/winter3"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:background="@drawable/winter4"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:background="@drawable/winter5"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:contentDescription="@string/todo" />

    </LinearLayout>
</ScrollView>